<Window x:Class="OrgillUtil_v3.Dialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OrgillUtil_v3"
        mc:Ignorable="d"
        SizeToContent="WidthAndHeight"
        Title="Dialog" Foreground="White" Background="#FFE6E6E6" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" Topmost="True" Icon="orgill.ico">
    <StackPanel>
        <Label Name="Message" Content="Message" FontSize="16" Margin="20,20,20,10"></Label>
        <Button Name="OK" IsDefault="True" Width="100" Height="30" Margin="20,10,20,20" Click="OK_Click">OK</Button>
    </StackPanel>
</Window>
